<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="form-container">
  <form action="/inv/add-classification" method="post">
    <label class="top" for="classification_name">Classification Name:</label>
    <span>(No spaces or special characters allowed)</span>
    <input type="text" name="classification_name" required pattern="^[a-zA-Z0-9]+$" value="<%= locals.classification_name %>">
    
    <button type="submit">Add Classification</button>
  </form>
</div>