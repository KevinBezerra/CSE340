<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<div class="account-update-container">

  <div class="update-form">
    <h3>Update Account Information</h3>
    <form id="updateAccount" action="/account/update" method="post">
      <fieldset>
        <label class="top">First Name:
          <input type="text" name="account_firstname" required value="<%= locals.account_firstname %>">
        </label>
        <label class="top">Last Name:
          <input type="text" name="account_lastname" required value="<%= locals.account_lastname %>">
        </label>
        <label class="top">Email:
          <input type="email" name="account_email" required value="<%= locals.account_email %>">
        </label>

        <input type="hidden" name="account_id" value="<%= locals.account_id %>">

        <input type="submit" value="Update Account" class="submitBtn">
      </fieldset>
    </form>
  </div>

  <hr>

  <div class="password-form">
    <h3>Change Password</h3>
    <div class="password-warning">
        <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
        <p><em>Note: By entering a password here, you will change your current password.</em></p>
    </div>

    <form id="changePassword" action="/account/change-password" method="post">
        <fieldset>
            <label class="top">New Password:
                <input type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            </label>

            <input type="hidden" name="account_id" value="<%= locals.account_id %>">

            <input type="submit" value="Change Password" class="submitBtn">
        </fieldset>
    </form>
  </div>

</div>